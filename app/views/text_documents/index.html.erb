<% provide(:title, "Documents") %>
<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | NLP4DH</title>
</head>
  <body>
    <h1><%= yield(:title) %></h1>
    <table class = "table table-bordered table-striped">
       <thead>
          <tr>
             <th>Name</th>
             <th> </th>
             <th> </th>
          </tr>
       </thead>

       <tbody>
          <% @text_documents.each do |text_document| %>
             <tr>
                <td><%= text_document.file_name %></td>
                <td><%= link_to "View", text_document_path(text_document), class: "btn btn-primary" %></td>
                <td><%= button_to "Delete",  text_document, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{text_document.file_name}?" %></td>
             </tr>
          <% end %>
       </tbody>

    </table>
    <p>Or upload a new file below.. <p>
    <p><%= link_to "New", new_text_document_path, class: "btn btn-primary"%></p>
  </body>
</html>
