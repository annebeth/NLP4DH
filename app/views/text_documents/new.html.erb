<div class="container">
  <div class="row">
    <div class="col-md-6" id="text-document-form">
      <h1> Annotate a new text </h1>
      <%= form_with model: @text_document, html: {class: "needs-validation", novalidate: true} do |f| %>
        <div class="form-group">
          <%= f.label :textfile %>
          <%= f.file_field :textfile, accept: 'text/plain', required: 'true', class: "form-control-file", id: "textFile" %>
          <div class="invalid-feedback">Please select a .txt file smaller than 3 MB.</div>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", required: 'true' %>
          <div class="invalid-feedback">
            Please add a short description of the text.
          </div>
        </div>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
